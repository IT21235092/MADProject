<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".JobHome"
    android:background="@drawable/jb3">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/back1"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="JobLink"
            android:textColor="@color/material_dynamic_neutral30"
            android:textSize="40dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="49dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="59dp"
            />

        <ImageView
            android:layout_width="31dp"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="13dp"
            />


    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/searchstyle"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:drawablePadding="20dp"
        android:elevation="10dp"
        android:hint="Search here"
        android:padding="15dp"
        android:textColor="#B7000000"
        android:textColorHint="#B7000000"
        android:textSize="19dp" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Connect with top talent and take your "
        android:textColor="@color/material_dynamic_neutral30"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="business to new heights!"
        android:textColor="@color/material_dynamic_neutral30"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Find your dream job here."
        android:textColor="#354DD6"
        android:textSize="20dp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="Job Categories"
        android:textColor="#DD000000"
        android:textSize="25dp"
        android:textStyle="normal|bold" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:elevation="20dp"
                    app:cardBackgroundColor="@color/teal_700"
                    app:cardCornerRadius="40dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/buttonall"
                        android:backgroundTint="@color/teal_700"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="20dp">

                        <ImageView
                            android:id="@+id/hlth1"
                            android:layout_width="68dp"
                            android:layout_height="65dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"

                            app:srcCompat="@drawable/healthcareee" />

                        <TextView
                            android:id="@+id/health"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Health"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:elevation="20dp"
                    app:cardBackgroundColor="@color/teal_700"
                    app:cardCornerRadius="40dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/buttonall"
                        android:backgroundTint="@color/teal_700"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="20dp">

                        <ImageView
                            android:id="@+id/it1"
                            android:layout_width="76dp"
                            android:layout_height="66dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/information" />

                        <TextView
                            android:id="@+id/IT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="IT"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:elevation="20dp"
                    app:cardBackgroundColor="@color/teal_700"
                    app:cardCornerRadius="40dp">

                    <LinearLayout
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/buttonall"
                        android:backgroundTint="@color/teal_700"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="20dp">

                        <ImageView
                            android:id="@+id/grphic1"
                            android:layout_width="71dp"
                            android:layout_height="64dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"

                            app:srcCompat="@drawable/illustrationn" />

                        <TextView
                            android:id="@+id/graph"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Graphic "
                            android:textColor="#fff"
                            android:textSize="18dp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:elevation="20dp"
                    app:cardBackgroundColor="@color/teal_700"
                    app:cardCornerRadius="40dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/buttonall"
                        android:backgroundTint="@color/teal_700"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="20dp">

                        <ImageView
                            android:id="@+id/techni1"
                            android:layout_width="77dp"
                            android:layout_height="76dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"

                            app:srcCompat="@drawable/technical" />

                        <TextView
                            android:id="@+id/tech"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Technical"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:elevation="20dp"
                    app:cardBackgroundColor="@color/teal_700"
                    app:cardCornerRadius="40dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/buttonall"
                        android:backgroundTint="@color/teal_700"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="20dp">

                        <ImageView
                            android:id="@+id/mech1"
                            android:layout_width="76dp"
                            android:layout_height="78dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"

                            app:srcCompat="@drawable/mechanic" />

                        <TextView
                            android:id="@+id/mech"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Mechanic"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:elevation="20dp"
                    app:cardBackgroundColor="@color/teal_700"
                    app:cardCornerRadius="40dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/buttonall"
                        android:backgroundTint="@color/teal_700"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="20dp">

                        <ImageView
                            android:id="@+id/edu1"
                            android:layout_width="79dp"
                            android:layout_height="79dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"

                            app:srcCompat="@drawable/teach" />

                        <TextView
                            android:id="@+id/edu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Educating"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>



